{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "definitions" : {
    "Contacto" : {
      "type" : "object",
      "properties" : {
        "email" : {
          "type" : "string",
          "description" : "Correo electrónico"
        },
        "telefono" : {
          "type" : "string",
          "description" : "Número telefónico"
        }
      }
    },
    "Direccion" : {
      "type" : "object",
      "properties" : {
        "codigoLocal" : {
          "type" : "string",
          "description" : "Código de cuatro dígitos asignado por SUNAT, que identifica al establecimiento anexo. Dicho código se genera al momento la respectiva comunicación del establecimiento. Tratándose del domicilio fiscal y en el caso de no poder determinar el lugar de la venta, informar \"0000\"",
          "minLength" : 4,
          "maxLength" : 4,
          "pattern" : "[0-9]+"
        },
        "codigoPais" : {
          "type" : "string",
          "description" : "Código de 2 dígitos que corresponde al país a la que pertenece la dirección. Ejemplo: PE",
          "minLength" : 2,
          "maxLength" : 2
        },
        "departamento" : {
          "type" : "string",
          "description" : "Nombre del Departamento o Región. Ejemplo: Ayacucho"
        },
        "direccion" : {
          "type" : "string",
          "description" : "Dirección. Ejemplo: Jirón las piedras 123"
        },
        "distrito" : {
          "type" : "string",
          "description" : "Nombre del Distrito. Ejemplo: Quinua"
        },
        "provincia" : {
          "type" : "string",
          "description" : "Nombre de la Provincia. Ejemplo: Huamanga"
        },
        "ubigeo" : {
          "type" : "string",
          "description" : "Código de 6 dígitos que corresponden al Departamento, Provincia, y Distrito",
          "minLength" : 6,
          "maxLength" : 6,
          "pattern" : "[0-9]+"
        },
        "urbanizacion" : {
          "type" : "string",
          "description" : "Nombre de la urbanización."
        }
      }
    }
  },
  "type" : "object",
  "properties" : {
    "cliente" : {
      "type" : "object",
      "properties" : {
        "contacto" : {
          "$ref" : "#/definitions/Contacto"
        },
        "direccion" : {
          "$ref" : "#/definitions/Direccion"
        },
        "nombre" : {
          "type" : "string"
        },
        "numeroDocumentoIdentidad" : {
          "type" : "string"
        },
        "tipoDocumentoIdentidad" : {
          "type" : "string",
          "description" : "Catalogo 06"
        }
      }
    },
    "fechaEmision" : {
      "type" : "string",
      "description" : "Format: \"YYYY-MM-SS\". Ejemplo: 2022-12-25",
      "pattern" : "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "firmante" : {
      "type" : "object",
      "properties" : {
        "razonSocial" : {
          "type" : "string"
        },
        "ruc" : {
          "type" : "string",
          "minLength" : 11,
          "maxLength" : 11,
          "pattern" : "[0-9]+"
        }
      },
      "description" : "Persona que firma electrónicamente el comprobante. Si NULL los datos del proveedor son usados."
    },
    "importeTotalPagado" : {
      "type" : "number",
      "minimum" : 0
    },
    "importeTotalRetenido" : {
      "type" : "number",
      "minimum" : 0
    },
    "moneda" : {
      "type" : "string",
      "minLength" : 3,
      "maxLength" : 3
    },
    "numero" : {
      "type" : "integer",
      "minimum" : 1,
      "maximum" : 99999999
    },
    "observacion" : {
      "type" : "string"
    },
    "operacion" : {
      "type" : "object",
      "properties" : {
        "comprobante" : {
          "type" : "object",
          "properties" : {
            "fechaEmision" : {
              "type" : "string",
              "description" : "Format: \"YYYY-MM-SS\". Ejemplo: 2022-12-25",
              "pattern" : "^\\d{4}-\\d{2}-\\d{2}$"
            },
            "importeTotal" : {
              "type" : "number"
            },
            "moneda" : {
              "type" : "string"
            },
            "serieNumero" : {
              "type" : "string"
            },
            "tipoComprobante" : {
              "type" : "string",
              "description" : "Catalogo 01"
            }
          }
        },
        "fechaOperacion" : {
          "type" : "string",
          "description" : "Fecha en la que se realiza el cobro o pago"
        },
        "importeOperacion" : {
          "type" : "number",
          "description" : "Importe del cobro o pago"
        },
        "numeroOperacion" : {
          "type" : "integer",
          "description" : "Numero de cobro o pago"
        },
        "tipoCambio" : {
          "type" : "object",
          "properties" : {
            "fecha" : {
              "type" : "string"
            },
            "valor" : {
              "type" : "number"
            }
          }
        }
      }
    },
    "proveedor" : {
      "type" : "object",
      "properties" : {
        "contacto" : {
          "$ref" : "#/definitions/Contacto"
        },
        "direccion" : {
          "$ref" : "#/definitions/Direccion"
        },
        "nombreComercial" : {
          "type" : "string"
        },
        "razonSocial" : {
          "type" : "string"
        },
        "ruc" : {
          "type" : "string",
          "minLength" : 11,
          "maxLength" : 11,
          "pattern" : "[0-9]+"
        }
      }
    },
    "serie" : {
      "type" : "string",
      "minLength" : 4,
      "pattern" : "^[R|r].*$"
    },
    "tipoRegimen" : {
      "type" : "string",
      "description" : "Catalog 23"
    },
    "tipoRegimenPorcentaje" : {
      "type" : "number",
      "exclusiveMinimum" : 0,
      "maximum" : 100
    }
  }
}